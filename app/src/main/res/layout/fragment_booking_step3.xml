<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/booking_step3_left_anchor"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/booking_step3_middle_anchor"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_marginRight="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/booking_step3_left_anchor"
            app:layout_constraintLeft_toRightOf="@id/booking_step3_left_anchor"
            app:layout_constraintRight_toLeftOf="@id/booking_step3_right_anchor"/>

        <View
            android:id="@+id/booking_step3_right_anchor"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/booking_step3_left_anchor" />

        <TextView
            android:id="@+id/booking_step3_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Info:"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_left_anchor" />

        <TextView
            android:id="@+id/booking_step3_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F.Name: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_personal_info" />

        <TextView
            android:id="@+id/booking_step3_fname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liona"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_middle_anchor"
            app:layout_constraintTop_toTopOf="@id/booking_step3_fname" />

        <TextView
            android:id="@+id/booking_step3_lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L.Name: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_fname" />

        <TextView
            android:id="@+id/booking_step3_lname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swan"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_middle_anchor"
            app:layout_constraintTop_toTopOf="@id/booking_step3_lname" />

        <TextView
            android:id="@+id/booking_step3_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_lname" />

        <TextView
            android:id="@+id/booking_step3_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A1234567"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_middle_anchor"
            app:layout_constraintTop_toTopOf="@id/booking_step3_id" />

        <TextView
            android:id="@+id/booking_step3_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_id" />

        <TextView
            android:id="@+id/booking_step3_gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_middle_anchor"
            app:layout_constraintTop_toTopOf="@id/booking_step3_gender" />

        <TextView
            android:id="@+id/booking_step3_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_gender" />

        <TextView
            android:id="@+id/booking_step3_age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_middle_anchor"
            app:layout_constraintTop_toTopOf="@id/booking_step3_age" />

        <View
            android:id="@+id/booking_step3_1st_underline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_age"/>

        <TextView
            android:id="@+id/booking_step3_booking_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Detail:"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_1st_underline" />

        <TextView
            android:id="@+id/booking_step3_vaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaccine: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_booking_detail" />

        <TextView
            android:id="@+id/booking_step3_vaccine_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CoronaVac"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_middle_anchor"
            app:layout_constraintTop_toTopOf="@id/booking_step3_vaccine" />

        <TextView
            android:id="@+id/booking_step3_campus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_vaccine" />

        <TextView
            android:id="@+id/booking_step3_campus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tsing Yi"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_middle_anchor"
            app:layout_constraintTop_toTopOf="@id/booking_step3_campus" />

        <TextView
            android:id="@+id/booking_step3_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_campus" />

        <TextView
            android:id="@+id/booking_step3_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17th Sept, 21"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_middle_anchor"
            app:layout_constraintTop_toTopOf="@id/booking_step3_date" />

        <TextView
            android:id="@+id/booking_step3_timeslot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timeslot: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_date" />

        <TextView
            android:id="@+id/booking_step3_timeslot_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:45"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_middle_anchor"
            app:layout_constraintTop_toTopOf="@id/booking_step3_timeslot" />

        <Button
            android:id="@+id/booking_step3_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green"
            android:text="Back"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@id/booking_step3_left_anchor"
            app:layout_constraintTop_toBottomOf="@id/booking_step3_timeslot"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/booking_step3_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green"
            android:text="Confirm"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintRight_toRightOf="@id/booking_step3_right_anchor"
            app:layout_constraintTop_toTopOf="@id/booking_step3_btn_back"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>